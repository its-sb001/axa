<body>
  <div class="popup" role="dialog" aria-labelledby="title">
    <div class="app-thumb" aria-hidden="true"></div>
    <h1 id="title">Get the APK</h1>
    <p>Click download to save the app to your device.</p>

    <!-- Simple anchor (best when same-origin or server sends attachment header) -->
    <a id="simpleLink" class="btn download" href="files/myapp.apk" download>Download APK</a>

    <!-- JS-driven download (fallback / works with CORS-enabled servers) -->
    <button id="fetchBtn" class="btn secondary">Download (robust)</button>

    <div class="note">If installation doesn't start, make sure "Install unknown apps" is allowed on your device.</div>
  </div>

  <script>
    // Replace this with the real URL to your APK
    const APK_URL = 'files/myapp.apk'; // or 'https://yourcdn.example.com/myapp.apk'

    // Simple anchor: if the APK is same-origin, the download attribute will usually work.
    document.getElementById('simpleLink').href = APK_URL;

    // Fetch + blob method (useful when you want to force download in-browser).
    // NOTE: This requires the server to allow CORS and may be memory-heavy for large APKs.
    document.getElementById('fetchBtn').addEventListener('click', async function () {
      try {
        this.disabled = true;
        this.textContent = 'Downloading...';
        const res = await fetch(APK_URL, { mode: 'cors' });
        if (!res.ok) throw new Error('Network error: ' + res.status);
        const blob = await res.blob();
        const blobUrl = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = blobUrl;
        a.download = 'myapp.apk'; // filename suggested for download
        document.body.appendChild(a);
        a.click();
        a.remove();
        URL.revokeObjectURL(blobUrl);
        this.textContent = 'Download started';
      } catch (err) {
        console.error(err);
        alert('Download failed. Check console and server CORS/headers.');
        this.textContent = 'Download (robust)';
      } finally {
        this.disabled = false;
      }
    });
  </script>
</body>
</html>
